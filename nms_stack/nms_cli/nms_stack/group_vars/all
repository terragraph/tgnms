      'agg_port': '8002'
      'app_port': '17077'
      'bt_seeder_port': '6881'

    - 'name': 'example_second'
      'ctrlr_port': '7008'
      'agg_port': '8003'
      'app_port': '17078'
      'bt_seeder_port': '6882'

